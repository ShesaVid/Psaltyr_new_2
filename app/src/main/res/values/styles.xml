<resources xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/black</item>
        <item name="android:textColor">@color/black</item>
        <item name="colorControlNormal">@color/default_icon_color_light</item> <!-- колір іконок -->
    </style>

    <style name="ToolbarOverflowTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlNormal">@color/red_300</item> <!-- колір трьох крапок -->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="AppTheme.NoActionBar.SplashScreen">
        <item name="android:statusBarColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="CustomTheme" parent="Theme.AppCompat.Light">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <!--нічний режим_1-->
    <style name="NightThemeV1" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">@color/night_text_v1</item>
        <item name="colorPrimaryDark">@color/night_background_v1</item>
        <item name="android:background">@color/night_background_v1</item>
        <item name="android:windowBackground">@color/night_background_v1</item>
        <item name="android:alertDialogTheme">@style/MyAlertDialog</item>
        <item name="colorControlNormal">@color/night_icon_color</item>
    </style>

    <!--нічний режим_AlertDialog-->
    <style name="MyAlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColor">@color/white</item>
        <item name="android:windowBackground">@color/cardview_dark_background</item>
        <item name="android:padding">@dimen/padding_AD</item>
    </style>

    <!--стиль FlexBox1-->
    <style name="FlexBox1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <!--стиль FlexBox2-->
    <style name="FlexBox2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <!--стиль FlexBox3-->
    <style name="FlexBox3">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:layout_marginTop">10dp</item>
    </style>
    <!--стиль RelativeBox-->
    <style name="RelativeBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <!--стиль текста Псалмы-->
    <style name="TextPsalmy">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:text">Псалми :</item>
        <item name="android:textSize">18sp</item>
    </style>
    <!--стиль кнопки кафизмы-->
    <style name="btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_marginTop">15dp</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textSize">14sp</item>
    </style>
    <!--стиль левой кнопки кафизмы-->
    <style name="btn.Left">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:drawableLeft">@drawable/ic_arrow_left</item>
    </style>
    <!--стиль правой кнопки кафизмы-->
    <style name="btn.Right">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@drawable/ic_arrow_right</item>
    </style>
    <!--стиль кнопки прослухати кафізму-->
    <style name="btn.Volume">
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:drawableRight">@drawable/ic_volume</item>
    </style>

    <!--стиль кнопок псалмов хх-->
    <style name="btn_Psalmu">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--стиль кнопок псалмов ххх-->
    <style name="btn_Psalmuxxx">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_marginLeft">9dp</item>
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:textSize">16sp</item>
    </style>
    <!--стиль заголовка Псалма-->
    <style name="Psalom">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/red</item>
    </style>

    <!--стиль фона -->
    <style name="Recycler_fon">
        <item name="android:background">@drawable/myfon_2</item>
    </style>
    <!--стиль главной кнопки -->
    <style name="main_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/myfon_1</item>
    </style>
    <!--стиль главной кнопки -->
    <style name="main_button.left">
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:drawableLeft">@drawable/ic_keyboard_arrow_down_black_24dp</item>
    </style>

    <style name="Evan_Troica">
        <item name="android:textSize">25sp</item>
        <item name="android:fontFamily">@font/evangelie</item>
        <item name="android:lineHeight" tools:targetApi="p">25dp</item>
    </style>

    <!--стиль текста и размера шрифта-->
    <style name="mySize">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
